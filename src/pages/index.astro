         </section>

         <section class="section-default">
             <article class="max-w-200 mx-auto">
                 <h2 class="pb-4">{t('NEWSLETTER_TITRE')}</h2>
                 <p class="italic pb-7">{t('NEWSLETTER_INTRO')}</p>
                <p class="pb-8">{t('NEWSLETTER_DESC')}</p>

                <div class="flex items-center gap-4">

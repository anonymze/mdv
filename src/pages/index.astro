                 <article class="group bg-white w-full shadow-xs">
                     <div class="overflow-hidden">
                         <MyImage src={EspaceCultureImg} alt='' width={300} height={200} layout='fullWidth' class="transition-transform duration-250 group-hover:scale-110"/>
                     </div>
                     <figure class="p-4">

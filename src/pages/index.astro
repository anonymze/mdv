         <section class="section-default">
             <article>
                     <h2 class="pb-3">{t('SEANCES_A_VENIR')}</h2>
                     <p class="distinguished pb-6">{t('CINEMA_INTRO')}</p>
                     <p class="w-2/3">
                         {t('CINEMA_DESC')}

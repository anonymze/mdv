---
import LogoMDV from '@/assets/icons/logo.svg'
import MyImage from '@/components/my-image.astro'
import { Button } from '@/components/ui/button'
import { Input } from '@/components/ui/input'
import { createTranslator, type I18n } from '@/i18n/translations'

interface Props {
	locale: I18n
}

const { locale } = Astro.props
const t = createTranslator(locale)

---

<footer class="bg-primary text-primary-foreground space-y-14 px-10 py-20">
	<!-- Top section: Logo, Info, Site Map, Newsletter -->
	<div class="flex gap-4">
		<!-- Logo -->

		<MyImage src={LogoMDV} alt={t('LOGO_ALT')} width={200} height={200} layout="constrained" />

		<!-- Informations pratiques -->
		<div class="w-full">
			<h3 class="text-primary-foreground pb-6">{t('INFORMATIONS_PRATIQUES')}</h3>

			<div class="grid grid-cols-2 space-y-4 gap-x-20 gap-y-3">
				<div>
					<h4 class="tracking-wider">{t('ADRESSE_DU_LIEU')}</h4>
					<hr class="mb-4 border-white/40" />
					<p class="pl-4 text-sm">24, Place Saint Clément <br />65120 - LUZ-SAINT-SAUVEUR</p>
				</div>

				<div>
					<h4 class="tracking-wider">{t('ACCES')}</h4>
					<hr class="mb-4 border-white/40" />
					<p class="pl-4 text-sm">{t('PARKING_OUI')}</p>
					<p class="pl-4 text-sm">{t('TRANSPORT_PUBLIC')}</p>
				</div>

				<div>
					<h4 class="tracking-wider">{t('HORAIRES')}</h4>
					<hr class="mb-4 border-white/40" />
					<p class="pl-4 text-sm">
						{t('HORAIRES_PART1')} <br /> {t('HORAIRES_PART2')}
					</p>
				</div>
			</div>
		</div>
	</div>

	<div class="grid grid-cols-2 gap-20">
		<div>
			<h3 class="text-primary-foreground pb-4">{t('PLAN_DU_SITE')}</h3>

			<div class="grid grid-cols-2 gap-20">
				<div>
					<h4 class="tracking-wider">{t('ESPACES_ARTISTIQUES')}</h4>
					<hr class="mb-4 border-white/40" />
					<p class="pl-4 text-sm">24, Place Saint Clément <br />65120 - LUZ-SAINT-SAUVEUR</p>
				</div>
				<div>
					<h4 class="tracking-wider">Maison de la vallée</h4>
					<hr class="mb-4 border-white/40" />
					<p class="pl-4 text-sm">24, Place Saint Clément <br />65120 - LUZ-SAINT-SAUVEUR</p>
				</div>
			</div>
		</div>
		<div>
			<h3 class="text-primary-foreground pb-4">{t('NEWSLETTER_TITRE')}</h3>
			<p class="pb-7 italic">{t('NEWSLETTER_INTRO')}</p>
			<div class="flex items-center gap-4">
				<Input className="h-12 w-full border-none bg-white text-black" placeholder={t('EMAIL_PLACEHOLDER')} />
				<Button variant={'secondary'} size={'xl'}>{t('NEWSLETTER_BOUTON')}</Button>
			</div>
		</div>
	</div>

	<!-- Partners section -->
	<div>
		<h3 class="text-primary-foreground pb-4">{t('NOS_PARTENAIRES')}</h3>

		<div class="flex items-center justify-center gap-5">
			<MyImage src={LogoMDV} alt={t('LOGO_ALT')} width={100} height={100} layout="constrained" />
			<MyImage src={LogoMDV} alt={t('LOGO_ALT')} width={100} height={100} layout="constrained" />
			<MyImage src={LogoMDV} alt={t('LOGO_ALT')} width={100} height={100} layout="constrained" />
			<MyImage src={LogoMDV} alt={t('LOGO_ALT')} width={100} height={100} layout="constrained" />
			<MyImage src={LogoMDV} alt={t('LOGO_ALT')} width={100} height={100} layout="constrained" />
			<MyImage src={LogoMDV} alt={t('LOGO_ALT')} width={100} height={100} layout="constrained" />
			<MyImage src={LogoMDV} alt={t('LOGO_ALT')} width={100} height={100} layout="constrained" />
			<MyImage src={LogoMDV} alt={t('LOGO_ALT')} width={100} height={100} layout="constrained" />
		</div>
	</div>
</footer>
